<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guitarLayout"
    tools:context="com.example.uri.newguitarporta.MainActivity"
    android:background="@drawable/realisticscreen">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:layout_marginLeft="67px"
                android:background="#000049ff"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout2"
                android:layout_marginLeft="117px"
                android:background="#000049ff">

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout3"
                android:layout_marginLeft="111px"
                android:background="#000049ff" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4"
                android:layout_marginLeft="109px"
                android:background="#000049ff" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout5"
                android:layout_marginLeft="114px"
                android:background="#000049ff" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="3px"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout6"
                android:layout_marginLeft="127px"
                android:background="#000049ff" >

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1044px"
            android:id="@+id/lay">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="236px"
            android:id="@+id/lay_but"
            android:background="@drawable/all"
            android:layout_marginTop="1044px">

            <Button
                android:layout_width="120px"
                android:layout_height="100px"
                android:id="@+id/G_button"
                android:layout_gravity="bottom"
                android:layout_marginLeft="42px"
                android:layout_marginBottom="28px"
                android:background="#00002fff" />
            <Button
                android:layout_width="120px"
                android:layout_height="100px"
                android:id="@+id/C_button"
                android:layout_gravity="bottom"
                android:layout_marginLeft="50px"
                android:layout_marginBottom="28px"
                android:background="#00002fff" />
            <Button
                android:layout_width="120px"
                android:layout_height="100px"
                android:id="@+id/D_button"
                android:layout_gravity="bottom"
                android:layout_marginLeft="50px"
                android:layout_marginBottom="28px"
                android:background="#00002fff" />
            <Button
                android:layout_width="120px"
                android:layout_height="100px"
                android:id="@+id/Em_button"
                android:layout_gravity="bottom"
                android:layout_marginLeft="54px"
                android:layout_marginBottom="28px"
                android:background="#00002fff" />

        </LinearLayout>


    </FrameLayout>

</RelativeLayout>
